#!/usr/bin/env bash
set -eo pipefail

BUILD_DIR=${1}
CACHE_DIR=${2}
DEPS_DIR=${3}
INDEX=${4}

BUILDPACK_DIR=$(dirname $(readlink -f ${BASH_SOURCE/*}))

echo "BUILDPACK_DIR = ${BUILDPACK_DIR}"
echo "BUILD_DIR = ${BUILD_DIR}"
echo "CACHE_DIR = ${CACHE_DIR}"
echo "DEPS_DIR = ${DEPS_DIR}"
echo "INDEX = ${INDEX}"

pushd "${DEPS_DIR}/${INDEX}"
  echo 'Hello Roy' > hello_roy.txt
popd

mkdir -p "${BUILD_DIR}/.profile.d"
HELLO_ROY_PATH="${BUILD_DIR}/.profile.d/source_me.sh"
echo "export PATH_TO_HELLO_ROY=/var/vcap/deps/${INDEX}/hello_roy.txt" > "${HELLO_ROY_PATH}"